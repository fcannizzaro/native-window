{
  "name": "@fcannizzaro/native-window",
  "version": "0.1.0",
  "description": "Native OS webview windows for Bun & Node.js (alpha)",
  "module": "index.ts",
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js",
    "index.ts",
    "native-window.js",
    "native-window.d.ts"
  ],
  "napi": {
    "binaryName": "native-window",
    "targets": [
      "aarch64-apple-darwin",
      "x86_64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "aarch64-pc-windows-msvc"
    ]
  },
  "scripts": {
    "build": "napi build --release --platform",
    "build:debug": "napi build --platform",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.0.0",
    "@types/bun": "^1.3.9"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "zod": "^4.3.6"
  },
  "optionalDependencies": {
    "@fcannizzaro/native-window-darwin-arm64": "0.1.0",
    "@fcannizzaro/native-window-darwin-x64": "0.1.0",
    "@fcannizzaro/native-window-win32-x64-msvc": "0.1.0",
    "@fcannizzaro/native-window-win32-arm64-msvc": "0.1.0"
  }
}
