{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["*.node", "native-window.js", "native-window.d.ts", "dist/**"],
      "inputs": [
        "src/**",
        "*.ts",
        "Cargo.toml",
        "Cargo.lock",
        "build.rs",
        "package.json",
        "tsconfig.json",
        "tsconfig.build.json",
        "vite.config.ts"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["**/*.ts", "package.json", "tsconfig.json"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["**/*.ts", "tsconfig.json", "package.json"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    }
  }
}
