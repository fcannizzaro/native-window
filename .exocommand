# ExoCommand Configuration

build-native-addon:
  description: "Build the native window module"
  command: "bun napi build --release --platform"
  cwd: ./packages/native-window

fmt-native-addon:
  description: "Format the code for the native window module"
  command: "cargo fmt --all"
  cwd: ./packages/native-window/src

clippy-native-addon:
  description: "Run Rust linter (clippy) for the native window module"
  command: "cargo clippy"
  cwd: ./packages/native-window
